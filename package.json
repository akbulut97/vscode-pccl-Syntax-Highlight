{
    "name": "afsa-pccl",
    "displayName": "PCCL",
    "description": "Language support for the AFSA ROBOTICS PCCL",
    "version": "1.0.1",
    "publisher": "azizhanakbulut",
    "icon": "resources/pccl_icon.webp",
    "repository": {
        "type": "git",
        "url": "https://github.com/akbulut97/vscode-pccl-Syntax-Highlight.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages","Snippets","Other"
    ],
	"activationEvents": [
		"onLanguage:afsa-pccl"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
            {
                "id": "pccl",
                "aliases": [
                    "PCCL",
                    "pccl"
                ],
                "extensions": [
                    ".pcc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
              "language": "pccl",
              "path": "./snippets/pccl.code-snippets"
            }
          ],
        "grammars": [
            {
                "language": "pccl",
                "scopeName": "source.pcc",
                "path": "./syntaxes/pccl.tmLanguage.json"
            }
        ],

		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.1",
		"typescript": "^5.0.2"
	}
}
